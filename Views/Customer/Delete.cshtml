@model ExamProjectOne.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2 class="text-center mb-4 text-danger">Delete Customer</h2>
<div class="alert alert-warning shadow-sm">
    <strong>⚠ Warning:</strong> Are you sure you want to delete this customer? This action <strong>cannot</strong> be undone.
</div>
<div class="container vh-100">
    <form asp-action="DeleteConfirmed" method="post" class="border p-4 rounded shadow-sm bg-light">
        <div class="mb-3">
            <label class="form-label">ID</label>
            <input asp-for="Id" class="form-control" readonly />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Username</label>
                <input asp-for="User.UserName" class="form-control" readonly />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Email</label>
                <input asp-for="User.Email" type="email" class="form-control" readonly />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">First Name</label>
                <input asp-for="User.FirstName" class="form-control" readonly />
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Last Name</label>
                <input asp-for="User.LastName" class="form-control" readonly />
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Phone Number</label>
                <input asp-for="User.PhoneNumber" class="form-control" readonly />
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Date of Birth</label>
                <input asp-for="User.DateOfBirth" type="date" class="form-control" readonly />
                <span asp-validation-for="User.DateOfBirth" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Gender</label>
            <select asp-for="User.Gender" class="form-select" disabled>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="User.Gender" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
            <a asp-action="Read" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
<style>
    .form-label {
        font-weight: bold;
    }

    .form-control, .form-select {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
    }

        .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 0 0.25rem rgba(76, 175, 80, 0.25);
        }

    .btn-outline-success, .btn-outline-secondary {
        padding: 10px 20px;
    }
</style>


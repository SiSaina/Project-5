@{
    ViewData["Title"] = "View customer";
}

<h1 class="text-center">Customer Management</h1>

<div class="container mt-4">
    <a asp-controller="Customer" asp-action="AddCustomer" class="btn btn-primary">
        Add Customer
    </a>
    <h2>Customer</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Birth Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Customers != null)
            {
                foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.User.UserName</td>
                        <td>@customer.User.FirstName</td>
                        <td>@customer.User.LastName</td>
                        <td>@customer.User.Gender</td>
                        <td>@customer.User.Email</td>
                        <td>@customer.User.PhoneNumber</td>
                        <td>@customer.User.DateOfBirth.ToShortDateString()</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-controller="Customer" asp-action="EditCustomer" asp-route-id="@customer.Id" class="btn btn-warning btn-sm">
                                    Edit
                                </a>
                                <a asp-controller="Customer" asp-action="DeleteCustomer" asp-route-id="@customer.Id" class="btn btn-danger btn-sm">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
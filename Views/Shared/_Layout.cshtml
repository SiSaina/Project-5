<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExamProjectOne</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExamProjectOne.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="mb-0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-dark fw-bold fs-3 text-uppercase" asp-area="" asp-controller="Home" asp-action="Index">Gym Frog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item fs-5">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (!(GlobalRoleManager.ActiveRole == "Admin" || GlobalRoleManager.ActiveRole == "Senior supervisor" || GlobalRoleManager.ActiveRole == "Senior coach" || GlobalRoleManager.ActiveRole == "Coach" || GlobalRoleManager.ActiveRole == "Supervisor"))
                        {
                            <li class="nav-item dropdown fs-5 position-relative">
                                <a class="nav-link text-dark fw-semibold" href="#" id="serviceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi"></i> Service
                                </a>
                                <ul class="dropdown-menu shadow rounded-3 border-0 mt-2" aria-labelledby="serviceDropdown">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-area="" asp-controller="Service" asp-action="Group">
                                            <i class="bi bi-people-fill text-primary"></i> Group Training
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-area="" asp-controller="Service" asp-action="Appoint">
                                            <i class="bi bi-calendar-check text-success"></i> Appointment
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item fs-5">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="ReadCustomer">Schedule</a>
                            </li>
                        }
                        @if (GlobalRoleManager.ActiveRole == "Admin" || GlobalRoleManager.ActiveRole == "Senior supervisor" || GlobalRoleManager.ActiveRole == "Senior coach" || GlobalRoleManager.ActiveRole == "Coach" || GlobalRoleManager.ActiveRole == "Supervisor")
                        {
                            <li class="nav-item fs-5">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Appointment" asp-action="Read">Appointment</a>
                            </li>
                            <li class="nav-item fs-5">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Read">Customer</a>
                            </li>
                            <li class="nav-item fs-5">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Schedule" asp-action="Read">Group training</a>
                            </li>
                            <li class="nav-item fs-5">
                                <a class="nav-link text-dark" asp-area="" asp-controller="GymHall" asp-action="Read">Gym hall</a>
                            </li>
                        }
                        @if (GlobalRoleManager.ActiveRole == "Admin")
                        {
                            <li class="nav-item fs-5">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Read">Employee</a>
                            </li>
                        }
                        <li class="nav-item fs-5">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
    <footer class="border-top footer text-muted">
        <div class="container">
            <p>Follow Us</p>
            <div class="social-icons">
                <a href="#" class="fab fa-facebook-square"></a>
                <a href="#" class="fab fa-twitter"></a>
                <a href="#" class="fab fa-linkedin"></a>
                <a href="#" class="fab fa-instagram"></a>
            </div>
            <p>&copy; 2025 MyApp - All Rights Reserved</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

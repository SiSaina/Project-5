@{
    ViewData["Title"] = "Delete employee";
}

<h2>Delete Employee</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this employee? This action cannot be undone.
</div>

<form method="post" asp-action="DeleteEmployeeConfirmed" asp-route-id="@Model.Id" asp-route-role="@Model.Role">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" value="@Model.Id" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input type="text" class="form-control" value="@Model.Username" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" value="@Model.FirstName" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" value="@Model.LastName" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Gender</label>
        <input type="text" class="form-control" value="@Model.Gender" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" value="@Model.Email" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input type="text" class="form-control" value="@Model.PhoneNumber" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Status</label>
        <input type="text" class="form-control" value="@Model.Status" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Role</label>
        <input type="text" class="form-control" value="@Model.Role" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Shift Time</label>
        <input type="text" class="form-control" value="@Model.ShiftTime" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Work Days</label>
        <input type="text" class="form-control" value="@Model.WorkDay" disabled />
    </div>
    @if (Model.Role?.ToLower() == "coach")
    {
        <div class="mb-3">
            <label class="form-label">Specialize</label>
            <input type="text" class="form-control" value="@ViewBag.Specialize" disabled />
        </div>
    }
    <div class="mb-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Employee", "Employee")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
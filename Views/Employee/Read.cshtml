
@{
    ViewData["Title"] = "Employee Page";
}

<h1 class="text-center">Employee Management</h1>

<div class="container mt-4">
    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add Employee</a>
    <a asp-controller="Employee" asp-action="Promote" class="btn btn-primary">Promotion</a>
    <h2>Supervisors</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Birth Date</th>
                <th>Role&Status</th>
                <th>Working Day</th>
                <th>Shift Time</th>
                <th>Skill</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var person in Model)
                {
                    <tr>
                        <td>@person.Id</td>
                        <td>@person.Username</td>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                        <td>@person.Gender</td>
                        <td>@person.Email</td>
                        <td>@person.PhoneNumber</td>
                        <td>@person.BirthDate</td>
                        <td>@string.Join(", ", person.RoleStats)</td>
                        <td>@person.ShiftTime</td>
                        <td>@person.WorkDay</td>
                        <td>@person.Skill</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-controller="Employee" asp-action="Update" asp-route-id="@person.Id" class="btn btn-warning btn-sm">Update</a>
                                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@person.Id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

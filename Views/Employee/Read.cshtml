@{
    ViewData["Title"] = "Employee Page";
}

<h1 class="text-center">Employee Management</h1>

<div class="container mt-4">
    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add Employee</a>
    <a asp-controller="Employee" asp-action="Promote" class="btn btn-primary">Promotion</a>
    <h2>Supervisors</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Birth Date</th>
                <th>Working Day</th>
                <th>Shift Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Supervisors != null)
            {
                foreach (var sup in Model.Supervisors)
                {
                    <tr>
                        <td>@sup.Id</td>
                        <td>@sup.User.UserName</td>
                        <td>@sup.User.FirstName</td>
                        <td>@sup.User.LastName</td>
                        <td>@sup.User.Gender</td>
                        <td>@sup.User.Email</td>
                        <td>@sup.User.PhoneNumber</td>
                        <td>@sup.User.DateOfBirth.ToShortDateString()</td>
                        <td>@sup.ShiftTime</td>
                        <td>@sup.WorkDay</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-controller="Employee" asp-action="Update" asp-route-id="@sup.Id" asp-route-role="supervisor" class="btn btn-warning btn-sm">
                                    Edit
                                </a>
                                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@sup.Id" asp-route-role="supervisor" class="btn btn-danger btn-sm">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <h2>Coaches</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Birth Date</th>
                <th>Specialize</th>
                <th>Working Day</th>
                <th>Shift Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Coaches != null)
            {
                foreach (var co in Model.Coaches)
                {
                    <tr>
                        <td>@co.Id</td>
                        <td>@co.User.UserName</td>
                        <td>@co.User.FirstName</td>
                        <td>@co.User.LastName</td>
                        <td>@co.User.Gender</td>
                        <td>@co.User.Email</td>
                        <td>@co.User.PhoneNumber</td>
                        <td>@co.User.DateOfBirth.ToShortDateString()</td>
                        <td>@co.Specialize</td>
                        <td>@co.ShiftTime</td>
                        <td>@co.WorkDay</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-controller="Employee" asp-action="Update" asp-route-id="@co.Id" asp-route-role="coach" class="btn btn-warning btn-sm">
                                    Edit
                                </a>
                                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@co.Id" asp-route-role="coach" class="btn btn-danger btn-sm">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@{
    ViewData["Title"] = "Employee Page";
}

<h1 class="text-center">Employee Management</h1>

<div class="container mt-4">
    <a asp-controller="Employee" asp-action="AddEmployee" class="btn btn-primary">
        Add Employee
    </a>
    <h2>Supervisors</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Supervisor ID</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Birth Date</th>
                <th>Working Day</th>
                <th>Shift Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Supervisors != null)
            {
                foreach (var supervisor in Model.Supervisors)
                {
                    <tr>
                        <td>@supervisor.Id</td>
                        <td>@supervisor.User.UserName</td>
                        <td>@supervisor.User.FirstName</td>
                        <td>@supervisor.User.LastName</td>
                        <td>@supervisor.User.Gender</td>
                        <td>@supervisor.User.Email</td>
                        <td>@supervisor.User.PhoneNumber</td>
                        <td>@supervisor.User.DateOfBirth.ToShortDateString()</td>
                        <td>@supervisor.ShiftTime</td>
                        <td>@supervisor.WorkDay</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@supervisor.Id" asp-route-role="supervisor" class="btn btn-warning btn-sm">
                                    Edit
                                </a>
                                <a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@supervisor.Id" asp-route-role="supervisor" class="btn btn-danger btn-sm">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <h2>Coaches</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Coach ID</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Birth Date</th>
                <th>Specialize</th>
                <th>Working Day</th>
                <th>Shift Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Coaches != null)
            {
                foreach (var coach in Model.Coaches)
                {
                    <tr>
                        <td>@coach.Id</td>
                        <td>@coach.User.UserName</td>
                        <td>@coach.User.FirstName</td>
                        <td>@coach.User.LastName</td>
                        <td>@coach.User.Gender</td>
                        <td>@coach.User.Email</td>
                        <td>@coach.User.PhoneNumber</td>
                        <td>@coach.User.DateOfBirth.ToShortDateString()</td>
                        <td>@coach.Specialize</td>
                        <td>@coach.ShiftTime</td>
                        <td>@coach.WorkDay</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@coach.Id" asp-route-role="coach" class="btn btn-warning btn-sm">
                                    Edit
                                </a>
                                <a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@coach.Id" asp-route-role="coach" class="btn btn-danger btn-sm">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
